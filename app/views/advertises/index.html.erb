<p id="notice"><%= notice %></p>

<h1>Advertises</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Release</th>
      <th>End</th>
      <th>Price</th>
      <th>Type</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertises.each do |advertise| %>
      <tr>
        <td><%= advertise.title %></td>
        <td><%= advertise.description %></td>
        <td><%= advertise.release %></td>
        <td><%= advertise.end %></td>
        <td><%= advertise.price %></td>
        <td><%= advertise.type %></td>
        <td><%= advertise.client.first_name %></td>
        <td><%= link_to 'Show', advertise %></td>
        <td><%= link_to 'Edit', edit_advertise_path(advertise) %></td>
        <td><%= link_to 'Destroy', advertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advertise', new_advertise_path %>
