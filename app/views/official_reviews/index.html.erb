<p id="notice"><%= notice %></p>

<h1>Official Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Official rating</th>
      <th>Official review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @official_reviews.each do |official_review| %>
      <tr>
        <td><%= official_review.client %></td>
        <td><%= official_review.official_rating %></td>
        <td><%= official_review.official_review %></td>
        <td><%= link_to 'Show', official_review %></td>
        <td><%= link_to 'Edit', edit_official_review_path(official_review) %></td>
        <td><%= link_to 'Destroy', official_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Official Review', new_official_review_path %>
